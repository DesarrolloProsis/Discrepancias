@{
    Layout = "";
}
@model NuevoFormatoDiscrepancias.Models.Usuarios
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Scripts/css/estilos.css" rel="stylesheet" />


@using (Html.BeginForm("Login", "home"))
{
    <body class="fondo">
        <div class="container">
            <div class="row justify-content-md-center">
                <div class="col-md-5 verticalalign">
                    <div class="col-md-12 backgroundlogin">
                        <div class="col-md-12" style="margin: auto;">
                            <h4>Iniciar Sesión</h4>
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.Usuario, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.Contraseña, new { @class = "form-control", @type = "password" })
                            </div>
                            <button id="BtnLogin" class="btn btn-primary">Ingresar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </body>

}


